<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Eaalim Audible Mushaf</title>

    <!-- styles -->
    <link rel="stylesheet" href="/styles/core.css" />
    <link rel="stylesheet" href="/styles/home.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&family=Roboto:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- libs -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script
      src="https://kit.fontawesome.com/82432b4eb3.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <div class="body-wrapper centered">
      <!-- header -->
      <header class="header centered">
        <a href="/" class="logo centered">
          <img src="/assets/logo.jpg" alt="Eaalim Logo" id="logo-image" />
          <div class="logo-text">
            <h1 id="logo-title">Eaalim Online Mushaf</h1>
            <h2 id="logo-slogan">
              Listen to our Mushaf through interactive audios
            </h2>
          </div>
        </a>

        <!-- selectors -->
        <div id="view-form" class="centered">
          <div class="list-dropdown">
            <button type="button" class="dropdown-btn centered" id="hokm-btn">
              <p>Choose Hokm</p>
              <i class="fa-solid fa-arrow-down"></i>
            </button>
            <div class="dropdown-list" id="hokm-list">
              <ul id="hokm-ul"></ul>
            </div>
          </div>

          <div class="list-dropdown">
            <button
              type="button"
              class="dropdown-btn centered"
              id="juz-btn"
              disabled
            >
              <p>Choose Juz æ</p>
              <i class="fa-solid fa-arrow-down"></i>
            </button>
            <div class="dropdown-list" id="juz-list">
              <ul id="juz-ul"></ul>
            </div>
          </div>
        </div>
      </header>

      <!-- page viewer -->
      <main class="displayer centered">
        <div class="page-slider centered">
          <a href="#" id="prev" class="nav-arrow disabled"
            ><i class="fa-solid fa-arrow-left"></i
          ></a>

          <div class="image-displayer">
            <img id="page-holder" alt="mushaf page" />
          </div>

          <a href="#" id="next" class="nav-arrow disabled"
            ><i class="fa-solid fa-arrow-right"></i
          ></a>
        </div>

        <div class="show-audios-checkbox centered">
          <label>
            <input type="checkbox" id="toggle-audios" checked />
            Show audios
          </label>
        </div>
      </main>
    </div>

    <!-- app script -->
    <script src="/scripts/home.js"></script>
  </body>
</html>
